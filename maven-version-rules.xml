				<ignoreVersion type="regex">2.3.0.M1|2.3.0.M2|2.3.0.M3</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.springframework.security" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">5.2.0.M1|5.2.0.M2|5.2.0.M3</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.springframework.boot" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">2.2.0.M1|2.2.0.M2|2.2.0.M3|2.2.0.M4</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.springframework.session" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">2.2.0.M1|2.2.0.M2</ignoreVersion>
			</ignoreVersions>
		</rule>
	</rules>
</ruleset>