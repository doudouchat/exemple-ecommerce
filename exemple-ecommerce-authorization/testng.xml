<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="authorization" parallel="false">
	<test name="ut core">
		<packages>
			<package name="com.exemple.ecommerce.authorization.core.cors" />
			<package name="com.exemple.ecommerce.authorization.core.swagger" />
		</packages>
		<classes>
			<class name="com.exemple.ecommerce.authorization.core.AuthorizationServerApplicationTest" />
		</classes>
	</test>
	<test name="oauth2 code grant">
		<classes>
			<class name="com.exemple.ecommerce.authorization.core.AuthorizationCodeTest" />
		</classes>
	</test>
	<test name="oauth2 implicit">
		<classes>
			<class name="com.exemple.ecommerce.authorization.core.AuthorizationImplicitTest" />
		</classes>
	</test>
	<test name="oauth2 credentials">
		<classes>
			<class name="com.exemple.ecommerce.authorization.core.AuthorizationCredentialsTest" />
		</classes>
	</test>
	<test name="oauth2 password">
		<classes>
			<class name="com.exemple.ecommerce.authorization.core.AuthorizationPasswordTest" />
		</classes>
	</test>
	<test name="ut password">
		<packages>
			<package name="com.exemple.ecommerce.authorization.password" />
		</packages>
	</test>
	<test name="ut disconnection">
		<packages>
			<package name="com.exemple.ecommerce.authorization.disconnection" />
		</packages>
	</test>
</suite>
